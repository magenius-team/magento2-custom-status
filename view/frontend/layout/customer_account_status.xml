<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Edit Customer Status</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magenius\CustomerStatus\Block\Status" name="customer_status_edit"
                   template="Magenius_CustomerStatus::account/status.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
